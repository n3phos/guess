

      <div class="col-md-7 game-section ">

        <div id="player"></div>

        <div id="playerb"> </div>

        <div class="match">
          <h3 id="match-question" style="margin-bottom: 30px">
          </h3>
          <span id="match-answer" style="display:none" class="answer">
          </span>
          <div id="game-status" style="visibility: hidden">
            <%= image_tag('loading-game.gif', :class => "load-gif") %>
            <div id="status-text">
              loading new game...
            </div>

          </div>
        </div>

        <div class="image-display" >

          <img id="media-img" src="//:0" class="img-center" />

          <img id="record-player" src="//:0" class="img-center" />

        </div>


      </div>

      <div class="col-md-5 game-sidebar">

        <div class="game-results" >

          <div style="padding-left:153px; padding-top: 25px; "> <div id="score-increment" style="position:relative; top:15px; opacity: 0"> <span class="mario-font"> +5 </span></div> </div>
          <div style="text-align: center; margin-top:5px;">
            <span class="mario-font"> SCORE </span>
            <span id="score-count" class="mario-font"> 0 </span>
          </div>
        </div>


        <%= render :partial => 'shared/game_controls' %>

        <div class="game-history">

          Game History

          <div id="history-wrapper" class="bordered-top">
            <div>
              <table style="width:100%">

                <tbody id="records">
                </tbody>

              </table>
            </div>
          </div>

        </div>

      </div>







