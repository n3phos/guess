
<div id="chat-wrapper" class="row">

  <% content_for :chat do %>
    <%= javascript_include_tag "chat.js" %>
    <%= swf_tag("chat.swf", :width => 0, :height => 0, :id => "my_flash", :div_id => "flashDiv", :parameters => { :allowScriptAccess => "always", :scale => "noScale"})%>
  <% end %>

  <div id="flashDiv"></div>

  <h2><%= @room.name %></h2>



  <div class="col-md-3 user-container" >

    <%= render :partial => 'shared/chat_users', locals: { room: @room } %>

  </div>

  <div id="table-wrapper" class="col-md-9 message-display-box">


    <table id="chatWrapper">

    </table>
  </div>

  <div id="message-container">

  </div>

  <button onclick="connect()">connect to irc</button>
  <p><input type="text" id="msg" name="message"/><button onclick="message()">send</button></p>
  <input type="text" id="channel" name="channel"/><button onclick="join()">join</button>
  <%= button_to 'Update users', room_users_path(name: @room.name), remote: true %>

</div>

</div>
