
<h1> Rooms </h1>

<p> Lobby is the only available room at the moment <p>

<div class="row">

  <div class="col-md-2">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Join</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @rooms.each do |r| %>
        <td> <%= r.name %> </td>
        <td> <%= link_to "Join", join_room_path(r.name), class: "btn btn-success" %></td>
      <% end %>
      </tr>
    </tbody>
  </table>

</div>

</div>


